[build-system]
requires = ["setuptools>=65.0.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "dataprobe"
version = "0.1.2"
description = "Advanced data pipeline debugging and profiling tools for Python"
readme = "README.md"
requires-python = ">=3.8"
license = {text = "MIT"}
authors = [
    {name = "SANTHOSH KRISHNAN R", email = "santhoshkrishnan3006@gmail.com"},
]
maintainers = [
    {name = "SANTHOSH KRISHNAN R", email = "santhoshkrishnan3006@gmail.com"},
]
keywords = [
    "data-pipeline",
    "debugging",
    "profiling",
    "data-engineering",
    "etl",
    "data-lineage",
    "memory-profiling",
    "pandas",
    "polars"
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "Intended Audience :: Science/Research",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Topic :: Software Development :: Libraries :: Python Modules",
    "Topic :: Scientific/Engineering :: Information Analysis",
    "Topic :: Software Development :: Debuggers",
]
dependencies = [
    "numpy>=1.21.0",
    "pandas>=1.3.0",
    "polars>=0.19.0",
    "scikit-learn>=1.0.0",
    "matplotlib>=3.5.0",
    "seaborn>=0.12.0",
    "rich>=13.0.0",
    "click>=8.0.0",
    "psutil>=5.9.0",
    "memory-profiler>=0.60.0",
    "graphviz>=0.20.0",
    "networkx>=2.8.0",
]

[project.urls]
Homepage = "https://github.com/santhoshkrishnan30/dataprobe"
Documentation = "https://dataprobe.readthedocs.io"
Repository = "https://github.com/santhoshkrishnan30/dataprobe"
"Bug Tracker" = "https://github.com/santhoshkrishnan30/dataprobe/issues"

[project.scripts]
dataprobe = "dataprobe.cli:main"

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-cov>=4.0.0",
    "black>=22.0.0",
    "flake8>=4.0.0",
    "mypy>=0.990",
    "sphinx>=4.0.0",
    "sphinx-rtd-theme>=1.0.0",
]
all = [
    "sqlalchemy>=2.0.0",
    "pyarrow>=10.0.0",
    "jupyter>=1.0.0",
    "ipython>=8.0.0",
]

[tool.setuptools.packages.find]
include = ["dataprobe*"]
exclude = ["tests*", "examples*"]

[tool.black]
line-length = 100
target-version = ['py38', 'py39', 'py310', 'py311']
include = '\.pyi?$'
extend-exclude = '''
(
  /(
      \.eggs
    | \.git
    | \.hg
    | \.mypy_cache
    | \.tox
    | \.venv
    | _build
    | buck-out
    | build
    | dist
  )/
)
'''

[tool.pytest.ini_options]
minversion = "7.0"
addopts = "-ra -q --strict-markers --cov=dataprobe --cov-report=term-missing"
testpaths = [
    "tests",
]
python_files = "test_*.py"
python_classes = "Test*"
python_functions = "test_*"

[tool.coverage.run]
source = ["dataprobe"]
omit = [
    "*/tests/*",
    "*/examples/*",
    "*/__init__.py",
]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "if self.debug:",
    "if __name__ == .__main__.:",
    "raise AssertionError",
    "raise NotImplementedError",
    "if 0:",
    "if False:",
]